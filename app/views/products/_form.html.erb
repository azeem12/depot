<%= form_for(@product) do |f| %>

    <div class="field">
      <%= f.label :title, "Title" %> <span style="color: red; display: inline-block; "> * </span> <br>
      <%= f.text_field :title %>
      <% if @product.errors.any? and @product.title.blank? %>
          <div style=" font-size: 0.5em; font-family: arial; color: red;">
            Title can't be blank.
          </div>
      <% end %>
    </div>
    <br>

    <div class="field">
      <%= f.label :description %> <br>
      <%= f.text_area :description %>
    </div>
    <br>

    <div class="field">
      <%= f.label :price %> <span style="color: red;"> * </span> <br>
      <%= f.text_field :price %>
      <% if @product.errors.any? and @product.price.blank? %>
          <div style=" font-size: 0.5em; font-family: arial; color: red;">
            Price can't be blank.
          </div>
      <% end %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>

<% end %>
